@page
@model MusicModel
@{
    ViewData["Title"] = "Music";
}

<div class="container mt-4">
    <h1>Каталог альбомов</h1>


    <div class="row">
        @foreach (var album in Model.Albums)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="data:image/png;base64,@(album.AlbumCover != null ? Convert.ToBase64String(album.AlbumCover) : "")" class="card-img-top" alt="@album.AlbumTitle" />
                    <div class="card-body">
                        <h5 class="card-title">@album.AlbumTitle</h5>
                        <p class="card-text">Артист: @album.Artist</p>
                        <p class="card-text">Цена: @album.Price руб.</p>
                        <a asp-page="/AlbumDetails" asp-route-id="@album.Id" class="btn btn-primary">Подробнее</a>
                        <button class="btn btn-success mt-2" onclick="addToCart(@album.Id)">Добавить в корзину</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function addToCart(albumId) {
            alert(`Альбом ${albumId} добавлен в корзину`);
        }
    </script>
}


